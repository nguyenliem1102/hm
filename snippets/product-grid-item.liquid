{% comment %}
  This snippet is used to showcase each product during the loop,
  'for product in collection.products' in collection.liquid.

  This example has three products per column on desktop, two on
  our medium breakpoint, and a single row on small screens.
{% endcomment %}

{% comment %}
  Check if the product is on sale and set a variable to be used below.
{% endcomment %}

{% assign lable_sale = false %}
{% if product.compare_at_price_min > product.price_min %}
  {% assign lable_sale = true %}
{% endif %}

{% comment %}
  Check if the product is sold out and set a variable to be used below.
{% endcomment %}

{% assign lable_out = true %}
{% if product.available  %}
  {% assign lable_out = false %}
{% endif %}

{% comment %}
  Set a class for sold-out and on-sale items
{% endcomment %}

{% assign product_limitation = 0 %}
{% if settings.display_infinite_scrolling_homepage %}
{% assign product_limitation = settings.product_list_limit | plus: 0 %}
{% assign productIndex = forloop.index |minus:1 | modulo: product_limitation %}
{% else %}
{% assign productIndex = forloop.index |minus:1 %}
{% endif %}

{% assign delayTime = 200 | times : productIndex %}
{% if settings.collection_results_per_row1 != blank and settings.collection_results_per_row1 != '5' %}
{% assign product_grid = 12 | divided_by: settings.collection_results_per_row1 %}
{% assign columns = 12 | divided_by: product_grid %}
<div class="grid-{{product_grid}}  grid-item product-item {% if settings.product_style_images ==  'click'%}product-color-config{% endif %} {% if settings.display_product_reviews %}product-review{% endif %}"  id="product-{{ product.id }}" {%if settings.display_infinite_scrolling_homepage and forloop.index > product_limitation %} style="display:none" {% endif %}>

{% else %}
<div class=" grid-item product-item {% if settings.product_style_images ==  'click'%}product-color-config{% endif %} {% if settings.display_product_reviews %}product-review{% endif %}"  id="product-{{ product.id }}" {%if settings.display_infinite_scrolling_homepage and forloop.index > product_limitation %} style="display:none" {% endif %}>
{% endif %}

 
  <div class="product-image">
    {% if lable_sale or lable_out %}
    <div class="product-label">
      {% if lable_sale %}
      <span>Sale</span>
      {% endif %}
      {% if lable_out %}
      <span class="out-stock">sold out</span>
      {% endif %}
    </div>
    {% endif %}
    <a href="{{ product.url | within: collection }}" class="grid-image {% if settings.product_style_images ==  'hover'%} product-hover{% endif %}">
      <img class="feature-images" src="{{ product.featured_image.src | product_img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
		{% if settings.product_style_images ==  'hover'%}
          <span class="product-hover" data-idproduct="{{ product.id }}">
              {% for image in product.images %}
                  {% if forloop.first != true %}
                      <img class="img-responsive" alt="{{ product.title }}" src="{{ image.src | product_img_url: 'large' }}">
                      {% break %}
                  {% endif %}
              {% endfor %}
          </span>
       {% endif %}
        {% if settings.product_style_images ==  'click'%}
        <ul id="color-swatch-item">  
          {% for option in product.options %}
          {% if option == 'Color' %}
          {% assign index = forloop.index0 %}
          {% assign colorlist = '' %}
          {% assign color = '' %}
          {% for variant in product.variants %}
          {% capture color %}
          {{ variant.options[index] }}
          {% endcapture %}
          {% unless colorlist contains color %} 
          {% if variant.image.src != blank %}
          <li><a href="javascript:void(0);" data-image="{{ variant.image.src | img_url: 'large' }}"><img src="{{ color | downcase | strip_newlines | strip_html | remove: '  ' | append: '.png' | replace: ' ', '-' | asset_url }}" alt="{{ color }}" /></a></li>
          {% endif %}
          {% capture tempList %}
          {{colorlist | append: color | append: ' '}}
          {% endcapture %}
          {% assign colorlist = tempList %}
          {% endunless %}
          {% endfor %}
          {% endif %}
          {% endfor %}
        </ul>
        {% endif %}
    </a>
    <div class="add-to-link">
	  {% if settings.enable_quick_view %}
        <div class="quickview-button">
        <a href="javascript:void(0)" id="{{ product.handle }}" title="Quick View" class="sca-qv-button"><i class="fa fa-plus"></i></a>
      </div>
      {% endif %}
    </div>
  </div>
  <div class="product-content">
    <h3><a class="product-title" href="{{ product.url | within: collection }}">{{ product.title }}</a></h3>
    <div class="price-box">
      {% if lable_sale %}
      <p class="sale">
        <span class="old-price"> {{ product.compare_at_price_min | money }}</span>
        <span class="special-price">{% if product.price_varies %}<em>from </em>{% endif %}{{ product.price_min | money }}</span>
      </p>
      {% else %}
      <p class="regular-product">
        {% comment %}
          You can show a leading 'from' or 'up to' by checking 'product.price_varies'
          if your variants have different prices.
        {% endcomment %}
        <span >{% if product.price_varies %}<em>from </em>{% endif %}{{ product.price_min | money }}</span>
      </p>
      {% endif %}
    </div>
    <div class="review-ratting">
   	  {% if settings.display_product_reviews %}
      	<span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
      {% endif %}
    </div>
 	<div class="content-bottom">
      
      <div class="add-to-cart">
        {% assign variantCount = product.variants | size %}
        <form action="/cart/add" method="post" class="variants" id="product-actions-{{ product.id }}" enctype="multipart/form-data" style="padding:0px;">    
          {% if lable_out %}
          <input class="btn add-to-cart-btn" type="submit" value="Unavailable" disabled="disabled" />
          {% else %}
          {% if variantCount > 1 %}
          <input class="btn" type="button" data-toggle="tooltip" data-placement="top" title="Select options" onclick="window.location.href='{{product.url}}'" value="Select options" />
          {% else %}
          <input type="hidden" name="id" value="{{ product.variants[0].id }}" />      
          <input class="btn add-to-cart-btn" data-toggle="tooltip" data-placement="top" title="Add to Cart" type="submit" value="Add to Cart" />
          {% endif %}
          {% endif %}
        </form>      
      </div>
      {% include 'wishlist-product' %}
    </div>
  </div>
</div>