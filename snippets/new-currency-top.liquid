  <div data-currency="{{settings.currency_1_unit}}" class="currency {{settings.currency_1_unit}} {% if shop.currency == settings.currency_1_unit %} active {% endif %}" data-value="{{settings.currency_1_unit}}">{{settings.currency_1_unit}}</div> 
  {% endif %}
  {% assign currency_2_length = settings.currency_2_unit | size %}
