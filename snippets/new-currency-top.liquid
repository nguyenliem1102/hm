  <div data-currency="{{settings.currency_2_unit}}" class="currency {{settings.currency_2_unit}} {% if shop.currency == settings.currency_2_unit %} active {% endif %}" data-value="{{settings.currency_2_unit}}">{{settings.currency_2_unit}}</div> 
  {% endif %}
  {% assign currency_3_length = settings.currency_3_unit | size %}
  {% if currency_3_length > 0 %}
  <div data-currency="{{settings.currency_3_unit}}" class="currency  {{settings.currency_3_unit}} {% if shop.currency == settings.currency_3_unit %} active {% endif %}" data-value="{{settings.currency_3_unit}}">{{settings.currency_3_unit}}</div> 
  {% endif %}
  {% assign currency_4_length = settings.currency_4_unit | size %}
  {% if currency_4_length > 0 %}
  <div data-currency="{{settings.currency_4_unit}}" class="currency {{settings.currency_4_unit}} {% if shop.currency == settings.currency_4_unit %} active {% endif %}" data-value="{{settings.currency_4_unit}}">{{settings.currency_4_unit}}</div> 
  {% endif %}
</div>


{% endif %}